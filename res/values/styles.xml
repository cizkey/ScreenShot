<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MMListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>
    
    <style name="Widget.TabPageIndicator" parent="@style/Widget">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_indicator_holo</item>
        <item name="android:paddingLeft">22.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingRight">22.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="Theme.SherlockPageIndicator" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/MMListView</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Sherlock.ActionButton.Overflow</item>
    </style>
    
    <style name="style_checkbox">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:paddingLeft">30.0sp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/checkbox_select</item>
        <item name="android:drawablePadding">6sp</item>
    </style>
    <style name="ProgressBarStyle" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal"/>
    <style name="Toggle.Bug.Home" parent="@android:style/Widget">
        <item name="android:disabledAlpha">?android:disabledAlpha</item>
        <item name="android:clickable">true</item>
        <item name="android:textOn">停止</item>
        <item name="android:textOff">启动</item>
    </style>
</resources>
